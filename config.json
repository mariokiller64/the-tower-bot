{
  "app_package": "com.techtreegames.thetower",
  "main_loop_interval": 60,
  "ad_check_interval": 600,
  "spinning_gem_check_interval": 15,
  "ad_watch_duration": 60,
  "enable_ocr": true,
  "gem_farming_mode": true,
  "auto_upgrades": true,
  "auto_wave_start": true,
  "workshop_automation": true,
  "lab_automation": true,
  "event_automation": true,
  "ultimate_weapon_sync": true,
  "target_modules": ["PF", "GCOMP"],
  "gem_spend_threshold": 18000,
  "save_debug_screenshots": false,
  "randomize_taps": true,
  "tap_delay_range": [0.5, 1.0]
}